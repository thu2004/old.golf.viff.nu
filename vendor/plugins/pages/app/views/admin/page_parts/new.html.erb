<% send :"form_#{'remote_' if from_dialog?}for", [:admin, @page, @page_part] do |f| %>
  <div class='field'>
  	<%= f.label :title %>
  	<%= f.text_field :title %>
  </div>
	<div class='form-actions'>
		<%= f.submit 'Save', :id => "submit_button" %> 
		or 
		<%= link_to "Cancel", edit_admin_page_url(@page), :class => "close_dialog" %>
	</div>
<% end %>
<% content_for :head do %>
<script type='text/javascript'>
	FastInit.addOnLoad(function(e) {
		$$('.close_dialog').each(function(close) {
			close.observe('click', function(e)
			{
				if (parent && typeof(parent.tb_remove) == "function") {
					parent.tb_remove();
				}
				else if (typeof(tb_remove) == 'function') {
					tb_remove();
				}
				
				if (e)
				{
					e.stop();
				}
			});
		});
	});
</script>
<% end if from_dialog? %>