<% send :"form_#{'remote_' if from_dialog?}for", [:admin, @page, @page_part] do |f| %>
  <div class='field'>
  	<%= f.label :title %>
  	<%= f.text_field :title %>
  </div>
	<div class='form-actions'>
		<%= f.submit 'Save', :id => "submit_button" %> 
		or 
		<%= link_to "Cancel", edit_admin_page_url(@page), :class => "close_dialog" %>
	</div>
<% end %>