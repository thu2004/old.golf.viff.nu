<% 
	unless params[:current_link].blank?
		linked = (page.url == params[:current_link])
	end
%>
<li class='clearfix<%= " child" if child %><%= " linked" if linked%>' id="<%= dom_id(page) -%>">
  <%= link_to title_meta(page), page.url, :title => 'Link to this Page', :rel => page.title, :class => 'page_link' %>
  <% unless page.children.empty? -%>
    <% for page in page.children %>
      <%= render :partial => 'link_list_tree', :locals => {:page => page, :child => true} %>
    <% end %>
  <% end -%>
</li>