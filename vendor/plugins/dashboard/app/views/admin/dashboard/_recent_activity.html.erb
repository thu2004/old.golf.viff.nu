<h2>
	Latest Activity
</h2>
<% if @recent_activity.size > 0 %>
	<table id='recent_activity'>
<% @recent_activity.each do |change| 
	if Refinery::Plugin.active.find_activity_by_model(change.class).respond_to?('url_prefix')	%>
  	<tr class='<%= cycle("on", "") %>'>
      <%= activity_message_for(change) %>
  	</tr>
<% end rescue logger.warn "#{__FILE__} line #{__LINE__}:\n#{$!}\n\n"
end %>
	</table>
<% else %>
	<p>
		Nothing has happened yet.
	</p>
<% end %>