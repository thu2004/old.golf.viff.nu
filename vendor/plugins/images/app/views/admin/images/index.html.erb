<div id='actions'>
	<h2>Actions</h2>
	<ul>
		<li>
			<%= link_to "Create New Image", new_admin_image_url, :class => "add_icon" %>
		</li>
	</ul>
</div>
<div id='records'>
	<% if @images.size > 0 %>
		<h2>Images</h2>
		<ul>
			<li>
			<% unless session[:image_view] == "list" %>
				<%= link_to "List view", "#{admin_images_url}?view=list" %>
			<% else %>
				List view
			<% end %>
			</li>
			<li>
			<% unless session[:image_view] == "grid" %>
				<%= link_to "Grid view", "#{admin_images_url}?view=grid" %>
			<% else %>
				Grid view
			<% end %>
			</li>
		</ul>
		<%= will_paginate @images, :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <ul>
			<%= render :partial => "#{session[:image_view] ||= "list"}_view" %>
    </ul>
		<%= will_paginate @images, :previous_label => '&laquo;', :next_label => '&raquo;' %>
	<% else %>
		<p>
			<strong>
				There are no images yet.
				Click "Create New Image" to add your first image.
			</strong>
		</p>
	<% end %>
</div>