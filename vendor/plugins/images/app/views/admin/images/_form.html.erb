<%= error_messages_for :image %>

<% form_for [:admin, @image], :html => {:multipart => true, :style => 'float: left; width: 70%'} do |f| %>
	<div class='field'>
		<%= f.label :uploaded_data, 'Image' %>
		<% if params[:action] =~ /(edit)|(update)/ %>
			Use current image
			<em>or</em>, replace it with this one... 
		<% end %>
		<%= f.file_field :uploaded_data %>
	</div>
	<div class='form-actions'>
		<%= f.submit 'Save' %> 
		or 
		<%= link_to "Cancel", admin_images_url, :title => "Cancelling will lose all changes you've made to this image" %>
	</div>
<% end %>

<% if params[:action] =~ /(edit)|(update)/ %>
	<div style='float: right; width: 25%;'>
		<label>Current Image</label>
		<%= image_tag @image.public_filename(:medium), :class => "brown_border" %>
	</div>
<% end %>