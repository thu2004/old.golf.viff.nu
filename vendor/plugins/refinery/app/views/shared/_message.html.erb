<% flash.each do |key, value| %>
<div id="flash" class="flash_<%= key %>" style='display: none;' >
  <%= value %> (<%= link_to "close", "", {:id => "flash_close"} %>)
  <script type="text/javascript">
     $j('#flash_close').click(function(e) {
       $j('#flash').fadeOut({duration: 330});
       e.preventDefault();
     });
  </script>
</div>
<% end %>
