<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8"/>
    <title>VIFF</title>
    <%= stylesheet_link_tag "main", 'formtastic', 'formtastic_changes' , :media => "all" %>
    <%= javascript_include_tag :defaults %>
    <%= active_scaffold_includes %> 
  </head>
    
  <body>
  <div id="container">
    <!-- ====================== HEADER ================= -->
    <div id="header">
      <!-- SITE NAME -->
      <h1>VIFF -  <%= Option.get("section") %></h1>
      <ul id="navlinks">
          <li class="first"><a href="/">Hem</a></li>
        <li class="last">
          <% if logged_in? %>
              <%= link_to "Logga ut", logout_url %>
        <% else %>
              <%= link_to "Logga in", login_url %>
        <% end %>
        </li>
        <li class="welcome_user">				 
          <% if logged_in? %>
            Välkommen <%= current_user.name%>            
          <% end %>
         </li>
      </ul>
      <div id="membership_paid">
           <% if logged_in? %>
            (Din medlemsavgift är <%= current_user.paid ? "betalt" : "icke betalt"%>)            
          <% end %>
      </div>
    </div>
    
    <!-- ===================== SIDEBAR ================= -->	
      <div id="sidebar">
        <%= render(:partial => "shared/left_menu") %>		
      </div>
      
      <!-- ===================== CONTENT =============== -->
      <div id="content">
        <div id="content_inner">
           <% if flash[:notice] -%>
             <div id="flash_notice"><%= flash[:notice] %></div>
           <% end -%>
           <% if flash[:error] -%>
             <div id="flash_error"><%= flash[:error] %></div>
           <% end -%>
        	 <%= yield :layout %>	
        </div>
      </div>
      
      <!-- ======================= FOOTER ================ -->
      
      <div id="footer">
        <p>Hemsidan designad av Le Chi Thu <%= render(:partial => "shared/version") %></p>
      </div>
    </div>
  </body>
</html>	
